<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    NavigationPage.BackButtonTitle="Back"
    Padding="20"
    Title="{Binding Title}"
    x:Class="SwapiApp.Pages.GalleryPage"
    x:DataType="viewmodels:GalleryViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:viewmodels="clr-namespace:SwapiApp.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="20">
            <Button Command="{Binding ShowFilmsCommand}" Text="Films" />

            <Button Command="{Binding ShowPeopleCommand}" Text="People" />

            <Button Command="{Binding ShowPlanetsCommand}" Text="Planets" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>